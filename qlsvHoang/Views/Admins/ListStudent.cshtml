@model IEnumerable<qlsvHoang.Models.Student>

@{
	ViewData["Title"] = "List Student";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h6 class="mb-0 text-uppercase">Student Account</h6>
<hr>

<a class="mb-2" asp-action="CreateStudent"  style="text-decoration: none;">
	<button type="button"  class="btn btn-outline-dark bg-blue px-4 d-flex gap-2 me-2" style="display:inline !important">
		Create 
	</button>
</a>

<div class="card mt-2">
	<div class="card-body">
		<div class="table-responsive">
			<table id="example2" class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>Id</th>
						<th>Student Name</th>
						<th>Date of birth</th>
						<th>Address</th>
						<th>Phone number</th>
						<th>Class Name</th>
						<th> User Name</th>
					  
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var student in Model)
					{

						<tr>

							<td>@student.StudentId</td>
							<td>@student.Name</td>
							<td>@student.DateOfBirth.ToString("dd/MM/yyyy")</td>
							<td>@student.Address</td>
							<td>@student.PhoneNumber</td>
							<td>@student.ClassName</td>
							<td>@student.Username</td>
						   
							<td>
								<a asp-action="EditStudent" asp-route-id="@student.StudentId"  style="text-decoration: none;">
									<button type="button" id="kayne" class="btn btn-outline-dark px-4 d-flex gap-2 me-2" style="display:inline !important">
										<i class="material-icons-outlined">cloud_upload</i> Edit
									</button>
								</a>
								<a asp-action="DeleleStudent" asp-controller="Admins" asp-route-id="@student.StudentId" style="text-decoration: none;">
									<button type="button" id="kayne" class="btn btn-outline-dark px-4 d-flex gap-2" style="display:inline !important">
										<i class="material-icons-outlined">delete</i> Delete
									</button>
								</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
			@section scripts {
				<script>
					$(document).ready(function () {
						var table = $('#example2').DataTable({
							lengthChange: false,
							buttons: ['copy', 'excel', 'pdf', 'print']
						});

						table.buttons().container()
							.appendTo('#example2_wrapper .col-md-6:eq(0)');
					});
				</script>
			}
			@if (TempData["SuccessMessage"] != null)
			{
				<div class="alert alert-success">
					@TempData["SuccessMessage"]
				</div>
			}

			@if (TempData["ErrorMessage"] != null)
			{
				<div class="alert alert-danger">
					@TempData["ErrorMessage"]
				</div>
			}
		</div>
	</div>
</div>

