@model qlsvHoang.Models.Student

@{
    ViewData["Title"] = "Login Student";
    Layout = null;
}



<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.css" />
    <title>Login Admin</title>
</head>

<body>
    <div class="d-lg-flex half">
        <div class="bg order-1" style="background-image: url('/assets/images/test.jpg');"></div>
        <div class="contents order-2 order-md-1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <h3>Login to <strong>Management Student </strong></h3>
                        <p class="mb-4">Welcome back! Select login method:</p>
                        <div class="social d-flex text-center">
                            <a asp-controller="Authen" asp-action="LoginStudent" class="abc">Student</a>
                            <a asp-controller="Authen" asp-action="LoginTeacher" class="xyz" style="color: black; background-color: white">Teacher</a>
                            <a asp-controller="Authen" asp-action="LoginAdmin" class="abc" style="color: black; background-color: white">Admin</a>
                        </div>

                        <form asp-action="CreateStudent" asp-controller="Students" asp-route-returnurl="@ViewBag.ReturnUrl">
                            <div class="col-12">
                                <label asp-for="Name" class="form-label"></label>
                                <sup>*</sup>
                                <input asp-for="Name" class="form-control" required>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="DateOfBirth" class="form-label"></label>
                                <sup>*</sup>
                                <input asp-for="DateOfBirth" class="form-control" type="date" required>
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Address" class="form-label"></label>
                                <sup>*</sup>
                                <input asp-for="Address" class="form-control" required>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="ClassName" class="form-label"></label>
                                <sup>*</sup>
                                <input asp-for="ClassName" class="form-control" required>
                                <span asp-validation-for="ClassName" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="PhoneNumber" class="form-label"></label>
                                <sup>*</sup>
                                <input asp-for="PhoneNumber" class="form-control" required>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <input asp-for="RoleId" class="form-control" value="3" type="hidden">
                            </div>
                            <div class="col-12">
                                <label asp-for="Username" class="form-label"></label>
                                <sup>*</sup>
                                <input asp-for="Username" class="form-control" required>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Password" class="form-label"></label>
                                <sup>*</sup>
                                <div class="input-group" id="show_hide_password">
                                    <input asp-for="Password" class="form-control" required>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <span class="text-danger">@ViewBag.ErrorMessage</span>
                            </div>
                            <div class="col-12">
                                <div class="d-grid align-content-center d-flex justify-content-center">
                                    <button type="submit" class="btn btn-primary mt-5   ">Register</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.js"></script>

    @if (TempData["ok"] != null)
    {
        <script>
            $(document).ready(function () {
                $.toast({
                    heading: 'Notification',
                    text: "@TempData["ok"]",
                    showHideTransition: 'slide',
                    icon: 'success',
                    position: 'top-center',
                    hideAfter: 3000
                });
            });
        </script>
    }
    else if (TempData["no"] != null)
    {
        <script>
            $(document).ready(function () {
                $.toast({
                    heading: 'Notification',
                    text: "@TempData["no"]",
                    showHideTransition: 'slide',
                    icon: 'error',
                    position: 'top-center',
                    hideAfter: 10000
                });
            });
        </script>
    }
</body>
</html>
